<table class="ui striped table">
    <thead>
        <tr class="center aligned">
            <th colspan="4"></th>
        </tr>
    </thead>

    <tbody>
    <% @artist.songs.each do |song| %>
            <tr class="center aligned">
                <td>
                    <img class="ui avatar image small" src="https://robohash.org/<%= song.avatar %>?set=set3">
                </td>
                <td>
                    <%= song.name %>
                </td>
                <td>
                    <%= song.length %>
                </td>
                <td>
                    <%= link_to '☠︎', [@billboard, @artist, song], method: :delete %>
                </td>
            </tr>
    <% end %>
    </tbody>
</table>
